{
    "name": "detailnet/dfw-fileconversion",
    "description": "DETAIL Framework library for file conversion",
    "type": "library",
    "keywords": [
        "dfw",
        "detailnet",
        "file",
        "processing",
        "conversion"
    ],
    "homepage": "https://github.com/detailnet/dfw-fileconversion/",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Wolf",
            "email": "ivan.wolf@detailnet.ch"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "psr/log": "~1.0",
        "guzzlehttp/guzzle": "^5.0.3",
        "zendframework/zend-stdlib": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6",
        "squizlabs/php_codesniffer" : "~2.3",
        "phpmd/phpmd": "~2.2",
        "satooshi/php-coveralls": "~1.0",
        "detailnet/blitline": "~0.5.1"
    },
    "suggest": {
        "detailnet/blitline": "For usage of the Blitline adapter"
    },
    "autoload": {
        "psr-0": {
            "Detail\\FileConversion\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "DetailTest\\FileConversion\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "archive": {
        "exclude": [
            "!vendor",
            "tests",
            "*phpunit.xml",
            ".coveralls.yml",
            ".travis.yml",
            "build.xml",
            "build.properties",
            "composer.phar"
        ]
    }
}
